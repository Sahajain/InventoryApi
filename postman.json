{
  "info": {
    "name": "Product Inventory API - Quick Test",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    }
  ],
  "item": [
    {
      "name": "1. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "health"]
        }
      }
    },
    {
      "name": "2. Get All Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "3. Create Gaming Mouse",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Gaming Mouse\",\n  \"description\": \"RGB gaming mouse with programmable buttons\",\n  \"price\": 59.99,\n  \"stockQuantity\": 2,\n  \"category\": \"Electronics\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "4. Get Low Stock Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/low-stock",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "low-stock"]
        }
      }
    },
    {
      "name": "5. Get Product by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "1"]
        }
      }
    },
    {
      "name": "6. Update Product Price",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"price\": 799.99,\n  \"stockQuantity\": 25\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", "1"]
        }
      }
    },
    {
      "name": "7. Search Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products?search=laptop&page=1&pageSize=5",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"],
          "query": [
            {
              "key": "search",
              "value": "laptop"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "pageSize",
              "value": "5"
            }
          ]
        }
      }
    },
    {
      "name": "8. Filter by Category",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products?category=Electronics&sortBy=price&sortDescending=true",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"],
          "query": [
            {
              "key": "category",
              "value": "Electronics"
            },
            {
              "key": "sortBy",
              "value": "price"
            },
            {
              "key": "sortDescending",
              "value": "true"
            }
          ]
        }
      }
    }
  ]
}